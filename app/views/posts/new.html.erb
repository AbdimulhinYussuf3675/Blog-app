<div class="posts-container">
  <h1>Add a new post</h1>
  <div class="form_post">
  <%= form_with(model: [ current_user, @post ]) do |form| %>
      <%= form.text_field :title, class: "form_title", placeholder: "Title", required: true %>
      <%= form.text_area :text, class: "form_text", placeholder: "Type your post here...", required: true %>
      <%= form.submit "Create", class: "form_btn" %>
      <% end %>
  </div>
</div>
